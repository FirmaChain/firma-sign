{
  "name": "server",
  "version": "0.1.0",
  "private": true,
  "description": "Firma-Sign backend server application",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@firmachain/firma-sign-core": "workspace:*",
    "express": "catalog:",
    "ws": "catalog:",
    "cors": "catalog:",
    "helmet": "catalog:",
    "dotenv": "catalog:",
    "winston": "catalog:",
    "sqlite3": "catalog:",
    "better-sqlite3": "catalog:",
    "node-forge": "catalog:",
    "nanoid": "catalog:",
    "zod": "catalog:",
    "multer": "catalog:",
    "express-rate-limit": "catalog:"
  },
  "devDependencies": {
    "@types/express": "catalog:",
    "@types/ws": "catalog:",
    "@types/cors": "catalog:",
    "@types/node": "catalog:",
    "@types/node-forge": "catalog:",
    "@types/multer": "catalog:",
    "@types/better-sqlite3": "catalog:",
    "typescript": "catalog:",
    "tsx": "catalog:",
    "vitest": "catalog:",
    "eslint": "catalog:",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}