{
	"name": "server",
	"version": "0.1.0",
	"private": true,
	"description": "Firma-Sign backend server application",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsc",
		"start": "node dist/index.js",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest --watch",
		"test:db": "vitest run src/__tests__/database",
		"test:storage": "vitest run src/__tests__/storage",
		"test:integration": "vitest run src/__tests__/storage/StorageManager.test.ts",
		"lint": "eslint src --ext .ts",
		"type-check": "tsc --noEmit",
		"clean": "rm -rf dist coverage .vitest",
		"pretest": "npm run type-check"
	},
	"dependencies": {
		"@firmachain/firma-sign-core": "workspace:*",
		"@firmachain/firma-sign-database-sqlite": "workspace:*",
		"@firmachain/firma-sign-storage-local": "workspace:*",
		"@firmachain/firma-sign-transport-p2p": "workspace:*",
		"cors": "catalog:",
		"dotenv": "catalog:",
		"express": "catalog:",
		"express-rate-limit": "catalog:",
		"helmet": "catalog:",
		"jsonwebtoken": "catalog:",
		"multer": "catalog:",
		"nanoid": "catalog:",
		"node-forge": "catalog:",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.1",
		"winston": "catalog:",
		"ws": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@eslint/js": "catalog:",
		"@types/cors": "catalog:",
		"@types/express": "catalog:",
		"@types/jsonwebtoken": "catalog:",
		"@types/multer": "catalog:",
		"@types/node": "catalog:",
		"@types/node-forge": "catalog:",
		"@types/supertest": "catalog:",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui-express": "^4.1.8",
		"@types/ws": "catalog:",
		"@typescript-eslint/eslint-plugin": "catalog:",
		"@typescript-eslint/parser": "catalog:",
		"eslint": "catalog:",
		"supertest": "catalog:",
		"tsx": "catalog:",
		"typescript": "catalog:",
		"typescript-eslint": "catalog:",
		"vitest": "catalog:"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
