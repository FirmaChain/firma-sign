{
  "name": "server",
  "version": "0.1.0",
  "private": true,
  "description": "Firma-Sign backend server application",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:db": "vitest run src/__tests__/database",
    "test:storage": "vitest run src/__tests__/storage",
    "test:integration": "vitest run src/__tests__/storage/StorageManager.test.ts",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage .vitest",
    "pretest": "npm run type-check"
  },
  "dependencies": {
    "@firmachain/firma-sign-core": "workspace:*",
    "express": "catalog:",
    "ws": "catalog:",
    "cors": "catalog:",
    "helmet": "catalog:",
    "dotenv": "catalog:",
    "winston": "catalog:",
    "sqlite3": "catalog:",
    "better-sqlite3": "catalog:",
    "node-forge": "catalog:",
    "nanoid": "catalog:",
    "zod": "catalog:",
    "multer": "catalog:",
    "express-rate-limit": "catalog:"
  },
  "devDependencies": {
    "@types/express": "catalog:",
    "@types/ws": "catalog:",
    "@types/cors": "catalog:",
    "@types/node": "catalog:",
    "@types/node-forge": "catalog:",
    "@types/multer": "catalog:",
    "@types/better-sqlite3": "catalog:",
    "typescript": "catalog:",
    "tsx": "catalog:",
    "vitest": "catalog:",
    "eslint": "catalog:",
    "@eslint/js": "catalog:",
    "typescript-eslint": "catalog:",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}