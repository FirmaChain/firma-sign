{
	"name": "@firmachain/firma-sign-documents",
	"version": "0.0.1",
	"type": "module",
	"description": "React components for document handling",
	"main": "dist/index.js",
	"module": "dist/index.esm.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/firmachain/firma-sign.git",
		"directory": "packages/documents"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"scripts": {
		"build": "vite build",
		"dev": "pnpm pre-storybook && storybook dev -p 6006 --no-open",
		"pre-storybook": "node scripts/pre-storybook.cjs",
		"test": "vitest run --passWithNoTests",
		"test:watch": "vitest --watch",
		"lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"lintfix": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
		"format": "prettier --write src/**/*.{ts,tsx}",
		"format:check": "prettier --check src/**/*.{ts,tsx}",
		"storybook": "pnpm pre-storybook && storybook dev -p 6006",
		"build-storybook": "pnpm pre-storybook && storybook build"
	},
	"dependencies": {
		"clsx": "^2.1.0",
		"pdf-lib": "^1.17.1",
		"pdfjs-dist": "^5.3.31",
		"react": "catalog:frontend",
		"react-dom": "catalog:frontend",
		"react-pdf": "^10.0.1",
		"tailwind-merge": "^2.2.0"
	},
	"devDependencies": {
		"@storybook/addon-essentials": "catalog:frontend",
		"@storybook/addon-interactions": "catalog:frontend",
		"@storybook/addon-links": "catalog:frontend",
		"@storybook/blocks": "catalog:frontend",
		"@storybook/react": "catalog:frontend",
		"@storybook/react-vite": "catalog:frontend",
		"@storybook/test": "catalog:frontend",
		"@testing-library/jest-dom": "catalog:frontend",
		"@testing-library/react": "catalog:frontend",
		"@types/node": "catalog:",
		"@types/react": "catalog:frontend",
		"@types/react-dom": "catalog:frontend",
		"@vitejs/plugin-react": "catalog:frontend",
		"autoprefixer": "catalog:frontend",
		"eslint": "catalog:",
		"@eslint/js": "catalog:",
		"typescript-eslint": "catalog:",
		"eslint-plugin-react": "catalog:",
		"eslint-plugin-react-hooks": "catalog:",
		"jsdom": "catalog:",
		"postcss": "catalog:frontend",
		"prettier": "catalog:",
		"storybook": "catalog:frontend",
		"tailwindcss": "catalog:frontend",
		"typescript": "catalog:",
		"vite": "catalog:",
		"vite-plugin-dts": "catalog:",
		"vitest": "catalog:"
	}
}
